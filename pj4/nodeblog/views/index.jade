extends layout

block content
  if posts
    each post, i in posts
      h1
        a(href='/posts/show/#{post._id}')
          =post.title
      p.meta Posted in #{post.category} by #{post.author} on #{moment(post.date).format("MM-DD-YY H:m:S")}
      =post.body
      a.more(href='/posts/show/#{post._id}') Read more
  else
    p.nopost There are no posts to display
